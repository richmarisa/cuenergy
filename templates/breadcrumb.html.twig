{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup templates
 */
#}
{% if breadcrumb %}
<div id="breadcrumbs">
  <div class="col-sm-4"></div>
  <ol class="breadcrumb col-sm-8">
    {% for item in breadcrumb %}
 	  {% set bc = item.text %}
      {% if 'Commitment' in bc %}
        {% set bc = 'Cornell Sustainability' %}
      {% endif %}	
      <li {{ item.attributes }}>
        {% if item.url %}
          <a href="{{ item.url }}">{{ bc }}</a>
        {% else %}
          {{ bc }}
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</div>
{% endif %}